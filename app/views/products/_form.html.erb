<%= form_with(model: product) do |form| %>
  <%= render "shared/error_messages", obj: product %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10 %>
  </div>
  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>


    <%= form.submit %>
  </div>
<% end %>
