<div class="container">
  <h1 class="mb-2"><%= @product.name %></h1>
  <p class="m-0"><%= number_to_currency(@product.price) %></p>


  <p>
    <% if @product.image.attached? %>
      <figure>
        <%= image_tag @product.image %>
        <figcaption><%= link_to @product.image.filename, rails_blob_path(@product.image, dispostion: "attachment") %> (<%= number_to_human_size(@product.image.attachment.blob.byte_size) %>)</figcaption>
      </figure>
      <% else %>
        <%= image_tag "https://cdn.pixabay.com/photo/2016/03/27/07/12/apple-1282241_960_720.jpg" %>
    <% end %>
  </p>

  <p>
    <%= link_to "Edit Product", edit_product_path(@product) %> 
  </p>

  <%= button_to "Delete Product", product_path(@product), method: :delete, form: {data: {turbo_confirm: "Are you sure?"}} %>
  <p><%= @product.description %></p>
</div>